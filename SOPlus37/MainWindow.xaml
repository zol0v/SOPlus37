<Window x:Class="SOPlus37.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SOPlus37.Views"
        xmlns:vm="clr-namespace:SOPlus37.ViewModels"
        Title="SOPlus37"
        Height="850" Width="1100"
        MinHeight="600" MinWidth="1100">

    <Window.Resources>

        <DataTemplate DataType="{x:Type vm:SubscriberLoginViewModel}">
            <views:SubscriberLoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AdminLoginViewModel}">
            <views:AdminLoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SubscriberShellViewModel}">
            <views:SubscriberShellView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AdminShellViewModel}">
            <views:AdminShellView/>
        </DataTemplate>


    </Window.Resources>

    <ContentControl Content="{Binding CurrentViewModel}"/>
</Window>
