<UserControl x:Class="SOPlus37.Views.AdminActionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#FFF7ED"
                BorderBrush="#FED7AA"
                BorderThickness="1"
                CornerRadius="12"
                Padding="14"
                Margin="0,0,0,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="Выполняется операция..."
                       Foreground="#9A3412"
                       FontSize="13"/>
        </Border>

        <Border Grid.Row="1"
                Background="#FEF2F2"
                BorderBrush="#FECACA"
                BorderThickness="1"
                CornerRadius="12"
                Padding="14"
                Margin="0,0,0,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Error}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Error}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="{Binding Error}"
                       Foreground="#DC2626"
                       FontSize="13"
                       TextWrapping="Wrap"/>
        </Border>

        <Border Grid.Row="2"
                Background="#ECFDF5"
                BorderBrush="#BBF7D0"
                BorderThickness="1"
                CornerRadius="12"
                Padding="14"
                Margin="0,0,0,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Success}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Success}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="{Binding Success}"
                       Foreground="#166534"
                       FontSize="13"
                       TextWrapping="Wrap"/>
        </Border>

        <Border Grid.Row="3"
                Background="White"
                BorderBrush="#E7ECF5"
                BorderThickness="1"
                CornerRadius="16"
                Padding="18"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Промотка времени"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#0F172A"/>

                    <TextBlock Text="Списывает ежемесячную плату (тариф + услуги) у ACTIVE абонентов."
                               Foreground="#64748B"
                               FontSize="13"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Промотать время"
                        Command="{Binding AdvanceTimeCommand}"
                        Height="38"
                        Padding="18,8"
                        Background="#0F172A"
                        Foreground="White"
                        BorderThickness="0"
                        VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <Border Grid.Row="4"
                Background="White"
                BorderBrush="#E7ECF5"
                BorderThickness="1"
                CornerRadius="16"
                Padding="18">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Результаты: " Foreground="#0F172A" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Processed, StringFormat={}{0} ACTIVE обработано}" Foreground="#64748B"/>
                    <TextBlock Text="  •  " Foreground="#94A3B8"/>
                    <TextBlock Text="{Binding BlockedNow, StringFormat={}{0} заблокировано}" Foreground="#64748B"/>
                    <TextBlock Text="  •  " Foreground="#94A3B8"/>
                    <TextBlock Text="{Binding TotalCharged, StringFormat={}Списано {0:N2} ₽}" Foreground="#64748B"/>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Results}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowHeaderWidth="0"
                          BorderThickness="0"
                          Background="White">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Номер" Binding="{Binding PhoneNumber}" Width="1.4*"/>
                        <DataGridTextColumn Header="Тариф (₽)" Binding="{Binding TariffFee, StringFormat={}{0:N2}}" Width="*"/>
                        <DataGridTextColumn Header="Услуги (₽)" Binding="{Binding ServicesFee, StringFormat={}{0:N2}}" Width="*"/>
                        <DataGridTextColumn Header="Итого (₽)" Binding="{Binding TotalFee, StringFormat={}{0:N2}}" Width="*"/>
                        <DataGridTextColumn Header="Баланс после" Binding="{Binding BalanceAfter, StringFormat={}{0:N2}}" Width="*"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding StatusAfter}" Width="110"/>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>
    </Grid>
</UserControl>
