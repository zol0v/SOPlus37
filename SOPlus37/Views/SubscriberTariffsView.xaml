<UserControl x:Class="SOPlus37.Views.SubscriberTariffsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#EEF2FF" BorderBrush="#C7D2FE" BorderThickness="1"
                CornerRadius="12" Padding="12" Margin="0,0,0,12">
            <TextBlock Text="{Binding ClientTypeText}" Foreground="#1E3A8A" FontSize="13"/>
        </Border>

        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <Border Background="#FFF7ED" BorderBrush="#FED7AA" BorderThickness="1"
                    CornerRadius="12" Padding="12">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Text="Загрузка..." Foreground="#9A3412" FontSize="13"/>
            </Border>

            <Border Background="#FEF2F2" BorderBrush="#FECACA" BorderThickness="1"
                    CornerRadius="12" Padding="12" Margin="0,10,0,0">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Error}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Error}" Value="">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Text="{Binding Error}" Foreground="#DC2626" FontSize="13" TextWrapping="Wrap"/>
            </Border>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="White" BorderBrush="#E7ECF5" BorderThickness="1"
                    CornerRadius="16" Padding="18" Margin="0,0,12,0">
                <StackPanel>

                    <TextBlock Text="Текущий тариф" FontSize="18" FontWeight="Bold" Foreground="#0F172A"/>

                    <TextBlock Text="{Binding CurrentTariff.TariffName}" FontSize="22"
                               FontWeight="Bold" Foreground="#1D4ED8" Margin="0,10,0,6"/>

                    <TextBlock Text="{Binding CurrentTariff.TypeText}" Foreground="#64748B" FontSize="12"/>

                    <Separator Margin="0,12,0,12"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="По городу (₽/мин)" Foreground="#64748B"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentTariff.CityCallCost, StringFormat={}{0:N2}}" FontWeight="SemiBold"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Межгород (₽/мин)" Foreground="#64748B" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentTariff.IntercityCallCost, StringFormat={}{0:N2}}" FontWeight="SemiBold" Margin="0,8,0,0"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Международн. (₽/мин)" Foreground="#64748B" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentTariff.InternationalCallCost, StringFormat={}{0:N2}}" FontWeight="SemiBold" Margin="0,8,0,0"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="SMS (₽/шт)" Foreground="#64748B" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentTariff.SmsCost, StringFormat={}{0:N2}}" FontWeight="SemiBold" Margin="0,8,0,0"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Стоимость перехода и месячная плата (₽)" Foreground="#64748B" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentTariff.SwitchCost, StringFormat={}{0:N2}}" FontWeight="SemiBold" Margin="0,8,0,0"/>
                    </Grid>

                    <Border Background="#F8FAFC" BorderBrush="#E7ECF5" BorderThickness="1"
                            CornerRadius="14" Padding="14" Margin="0,16,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTariff}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <StackPanel>
                            <TextBlock Text="Условия выбранного тарифа" FontSize="15" FontWeight="Bold" Foreground="#0F172A"/>
                            <TextBlock Text="(что будет при переходе)" FontSize="12" Foreground="#64748B" Margin="0,2,0,10"/>

                            <TextBlock Text="{Binding SelectedTariff.TariffName}" FontSize="18"
                                       FontWeight="Bold" Foreground="#0F172A"/>
                            <TextBlock Text="{Binding SelectedTariff.TypeText}" Foreground="#64748B" FontSize="12" Margin="0,4,0,10"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="240"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="По городу (₽/мин)" Foreground="#64748B"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedTariff.CityCallCost, StringFormat={}{0:N2}}" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Межгород (₽/мин)" Foreground="#64748B" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedTariff.IntercityCallCost, StringFormat={}{0:N2}}" FontWeight="SemiBold" Margin="0,8,0,0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Международн. (₽/мин)" Foreground="#64748B" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedTariff.InternationalCallCost, StringFormat={}{0:N2}}" FontWeight="SemiBold" Margin="0,8,0,0"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="SMS (₽/шт)" Foreground="#64748B" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedTariff.SmsCost, StringFormat={}{0:N2}}" FontWeight="SemiBold" Margin="0,8,0,0"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Стоимость перехода и месячная плата (₽)" Foreground="#64748B" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedTariff.SwitchCost, StringFormat={}{0:N2}}" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Background="#F8FAFC" BorderBrush="#E7ECF5" BorderThickness="1"
                            CornerRadius="14" Padding="14" Margin="0,16,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTariff}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <TextBlock Text="Выберите тариф справа, чтобы увидеть условия перехода."
                                   Foreground="#64748B" FontSize="13" TextWrapping="Wrap"/>
                    </Border>

                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="White" BorderBrush="#E7ECF5" BorderThickness="1"
                    CornerRadius="16" Padding="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Доступные тарифы" FontSize="18" FontWeight="Bold" Foreground="#0F172A"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding AvailableTariffs}"
                              SelectedItem="{Binding SelectedTariff}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              RowHeaderWidth="0"
                              BorderThickness="0"
                              Background="White"
                              Margin="0,12,0,12">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding TariffName}" Width="0.8*"/>
                            <DataGridTextColumn Header="Тип" Binding="{Binding TypeText}" Width="0.6*"/>
                            <DataGridTextColumn Header="Переход (₽)" Binding="{Binding SwitchCost, StringFormat={}{0:N2}}" Width="0.4*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="2"
                            Content="Перейти на выбранный тариф"
                            Command="{Binding ChangeTariffCommand}"
                            Height="40"
                            Background="#0F172A"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="16,10"
                            HorizontalAlignment="Right"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
