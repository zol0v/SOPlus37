<UserControl x:Class="SOPlus37.Views.AdminServicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#FFF7ED"
                BorderBrush="#FED7AA"
                BorderThickness="1"
                CornerRadius="12"
                Padding="14"
                Margin="0,0,0,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="Загрузка..."
                       Foreground="#9A3412"
                       FontSize="13"/>
        </Border>

        <Border Grid.Row="1"
                Background="#FEF2F2"
                BorderBrush="#FECACA"
                BorderThickness="1"
                CornerRadius="12"
                Padding="14"
                Margin="0,0,0,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Error}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Error}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="{Binding Error}"
                       Foreground="#DC2626"
                       FontSize="13"
                       TextWrapping="Wrap"/>
        </Border>

        <Border Grid.Row="2"
                Background="#ECFDF5"
                BorderBrush="#BBF7D0"
                BorderThickness="1"
                CornerRadius="12"
                Padding="14"
                Margin="0,0,0,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Success}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Success}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="{Binding Success}"
                       Foreground="#166534"
                       FontSize="13"
                       TextWrapping="Wrap"/>
        </Border>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <Border Background="White"
                        BorderBrush="#E7ECF5"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="16"
                        Margin="0,0,0,14">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <DockPanel>
                            <TextBlock Text="Список услуг"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#0F172A"
                                       DockPanel.Dock="Left"/>
                            <Button Content="Обновить"
                                    Command="{Binding RefreshCommand}"
                                    Height="34"
                                    Padding="14,6"
                                    Background="#7F1D1D"
                                    Foreground="White"
                                    BorderThickness="0"
                                    HorizontalAlignment="Right"/>
                        </DockPanel>

                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding Services}"
                                  SelectedItem="{Binding Selected}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  RowHeaderWidth="0"
                                  BorderThickness="0"
                                  Background="White"
                                  Margin="0,12,0,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ServiceID}" Width="30"/>
                                <DataGridTextColumn Header="Название" Binding="{Binding ServiceName}" Width="1.8*"/>
                                <DataGridTextColumn Header="Тип" Binding="{Binding ServiceType}" Width="75"/>
                                <DataGridTextColumn Header="Стоимость (₽)" Binding="{Binding Cost, StringFormat={}{0:N2}}" Width="90"/>

                                <DataGridTemplateColumn Header="Описание" Width="3.5*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Description}"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Description}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <Border Background="White"
                        BorderBrush="#E7ECF5"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Добавить новую услугу"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#0F172A"
                                   Margin="0,0,0,12"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Название" Foreground="#64748B" FontSize="13" Margin="0,0,0,6"/>
                                <TextBox Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="12,8"
                                         Background="#F8FAFC"
                                         BorderBrush="#E2E8F0"
                                         BorderThickness="1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                <TextBlock Text="Тип" Foreground="#64748B" FontSize="13" Margin="0,0,0,6"/>
                                <ComboBox ItemsSource="{Binding ServiceTypes}"
                                          SelectedItem="{Binding NewType}"
                                          Padding="10,6"
                                          Background="#F8FAFC"
                                          BorderBrush="#E2E8F0"
                                          BorderThickness="1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="0,0,12,0">
                                <TextBlock Text="Стоимость" Foreground="#64748B" FontSize="13" Margin="0,0,0,6"/>
                                <TextBox Text="{Binding NewCost, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="12,8"
                                         Background="#F8FAFC"
                                         BorderBrush="#E2E8F0"
                                         BorderThickness="1"/>
                            </StackPanel>

                            <Button Grid.Column="3"
                                    Content="Добавить"
                                    Command="{Binding AddCommand}"
                                    Height="36"
                                    Padding="18,8"
                                    Background="#0F172A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    VerticalAlignment="Bottom"/>
                        </Grid>

                        <Grid Grid.Row="2" Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                        </Grid>

                        <StackPanel Grid.Row="3" Margin="0,12,0,0">
                            <TextBlock Text="Описание"
                                       Foreground="#64748B"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>
                            <TextBox Text="{Binding NewDescription, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="70"
                                     Padding="12,8"
                                     Background="#F8FAFC"
                                     BorderBrush="#E2E8F0"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
