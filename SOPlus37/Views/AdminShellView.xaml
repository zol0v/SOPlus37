<UserControl x:Class="SOPlus37.Views.AdminShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SOPlus37.ViewModels"
             xmlns:views="clr-namespace:SOPlus37.Views"
             Background="#F5F7FB">

    <UserControl.Resources>

        <DataTemplate DataType="{x:Type vm:AdminTariffsViewModel}">
            <views:AdminTariffsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AdminServicesViewModel}">
            <views:AdminServicesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AdminSubscribersViewModel}">
            <views:AdminSubscribersView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AdminActionsViewModel}">
            <views:AdminActionsView/>
        </DataTemplate>

        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Foreground" Value="#FFECEC"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#7F1D1D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#6B1414"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarIcon" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SidebarText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#3A0B0B">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="16,18,16,12">
                    <TextBlock Text="SOPlus37"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding AdminName, FallbackValue=Администратор}"
                               Foreground="#FECACA"
                               FontSize="12"
                               Margin="0,6,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="12,8,12,8">

                    <Button Style="{StaticResource SidebarButton}"
                            Command="{Binding GoTariffsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource SidebarIcon}" Text="📦"/>
                            <TextBlock Style="{StaticResource SidebarText}" Text="Тарифы"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButton}"
                            Margin="0,6,0,0"
                            Command="{Binding GoServicesCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource SidebarIcon}" Text="🧩"/>
                            <TextBlock Style="{StaticResource SidebarText}" Text="Услуги"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButton}"
                            Margin="0,6,0,0"
                            Command="{Binding GoSubscribersCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource SidebarIcon}" Text="👥"/>
                            <TextBlock Style="{StaticResource SidebarText}" Text="Абоненты"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButton}"
                            Margin="0,6,0,0"
                            Command="{Binding GoActionsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource SidebarIcon}" Text="🛠️"/>
                            <TextBlock Style="{StaticResource SidebarText}" Text="Действия"/>
                        </StackPanel>
                    </Button>

                </StackPanel>

                <StackPanel Grid.Row="2" Margin="12,8,12,16">
                    <Button Style="{StaticResource SidebarButton}"
                            Command="{Binding LogoutCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource SidebarIcon}" Text="🚪"/>
                            <TextBlock Style="{StaticResource SidebarText}" Text="Выход"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="White"
                    CornerRadius="14"
                    Padding="18,14"
                    BorderBrush="#E7ECF5"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding PageTitle, FallbackValue=Панель администратора}"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#0F172A"/>

                    <TextBlock Grid.Row="1"
                               Text="{Binding PageSubtitle, FallbackValue=Управление данными}"
                               Margin="0,6,0,0"
                               FontSize="13"
                               Foreground="#64748B"/>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="14"
                    Padding="16"
                    Margin="0,14,0,0"
                    BorderBrush="#E7ECF5"
                    BorderThickness="1">

                <ContentControl Content="{Binding CurrentPageViewModel}"/>
            </Border>
        </Grid>

    </Grid>
</UserControl>
