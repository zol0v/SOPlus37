<UserControl x:Class="SOPlus37.Views.SubscriberActionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#FFF7ED"
                BorderBrush="#FED7AA"
                BorderThickness="1"
                CornerRadius="12"
                Padding="14"
                Margin="0,0,0,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <TextBlock Text="Выполняется операция..."
                       Foreground="#9A3412"
                       FontSize="13"/>
        </Border>

        <Border Grid.Row="1"
                Background="#FEF2F2"
                BorderBrush="#FECACA"
                BorderThickness="1"
                CornerRadius="12"
                Padding="14"
                Margin="0,0,0,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Error}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Error}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <TextBlock Text="{Binding Error}"
                       Foreground="#DC2626"
                       FontSize="13"
                       TextWrapping="Wrap"/>
        </Border>

        <Border Grid.Row="2"
                Background="#ECFDF5"
                BorderBrush="#BBF7D0"
                BorderThickness="1"
                CornerRadius="12"
                Padding="14"
                Margin="0,0,0,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Success}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Success}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <TextBlock Text="{Binding Success}"
                       Foreground="#166534"
                       FontSize="13"
                       TextWrapping="Wrap"/>
        </Border>

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Background="White"
                    BorderBrush="#E7ECF5"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="18"
                    Margin="0,0,0,14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Позвонить"
                               Foreground="#0F172A"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,12"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="Кому звонить"
                                       Foreground="#64748B"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>
                            <TextBox Text="{Binding CallToNumber, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,8"
                                     Background="#F8FAFC"
                                     BorderBrush="#E2E8F0"
                                     BorderThickness="1"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,12,0">
                            <TextBlock Text="Минут"
                                       Foreground="#64748B"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>
                            <TextBox Text="{Binding CallMinutesText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,8"
                                     Background="#F8FAFC"
                                     BorderBrush="#E2E8F0"
                                     BorderThickness="1"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="0,0,12,0">
                            <TextBlock Text="Тип звонка"
                                       Foreground="#64748B"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>
                            <ComboBox ItemsSource="{Binding CallTypes}"
                                      SelectedItem="{Binding SelectedCallType}"
                                      DisplayMemberPath="DisplayText"
                                      Padding="10,6"
                                      Background="#F8FAFC"
                                      BorderBrush="#E2E8F0"
                                      BorderThickness="1"/>
                        </StackPanel>

                        <Button Grid.Column="3"
                                Content="Позвонить"
                                Command="{Binding MakeCallCommand}"
                                Height="36"
                                Background="#0F172A"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="18,8"
                                VerticalAlignment="Bottom"/>
                    </Grid>

                    <TextBlock Grid.Row="2"
                               Text="Стоимость рассчитывается по текущему тарифу и списывается с баланса."
                               Foreground="#94A3B8"
                               FontSize="12"
                               Margin="0,10,0,0"/>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Background="White"
                    BorderBrush="#E7ECF5"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Отправить SMS"
                               Foreground="#0F172A"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,12"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="Кому отправить"
                                       Foreground="#64748B"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>
                            <TextBox Text="{Binding SmsToNumber, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,8"
                                     Background="#F8FAFC"
                                     BorderBrush="#E2E8F0"
                                     BorderThickness="1"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="Отправить"
                                Command="{Binding SendSmsCommand}"
                                Height="36"
                                Background="#3B82F6"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="18,8"
                                VerticalAlignment="Bottom"/>
                    </Grid>

                    <TextBlock Grid.Row="2"
                               Text="Стоимость SMS берётся из текущего тарифа и списывается с баланса."
                               Foreground="#94A3B8"
                               FontSize="12"
                               Margin="0,10,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
