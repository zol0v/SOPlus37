<UserControl x:Class="SOPlus37.Views.AdminTariffsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#FFF7ED"
                BorderBrush="#FED7AA"
                BorderThickness="1"
                CornerRadius="12"
                Padding="14"
                Margin="0,0,0,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="Загрузка..."
                       Foreground="#9A3412"
                       FontSize="13"/>
        </Border>

        <Border Grid.Row="1"
                Background="#FEF2F2"
                BorderBrush="#FECACA"
                BorderThickness="1"
                CornerRadius="12"
                Padding="14"
                Margin="0,0,0,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Error}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Error}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="{Binding Error}"
                       Foreground="#DC2626"
                       FontSize="13"
                       TextWrapping="Wrap"/>
        </Border>

        <Border Grid.Row="2"
                Background="#ECFDF5"
                BorderBrush="#BBF7D0"
                BorderThickness="1"
                CornerRadius="12"
                Padding="14"
                Margin="0,0,0,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Success}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Success}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="{Binding Success}"
                       Foreground="#166534"
                       FontSize="13"
                       TextWrapping="Wrap"/>
        </Border>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <Border Background="White"
                        BorderBrush="#E7ECF5"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="16"
                        Margin="0,0,0,14">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DockPanel>
                            <TextBlock Text="Список тарифов"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#0F172A"
                                       DockPanel.Dock="Left"/>

                            <Button Content="Обновить"
                                    Command="{Binding RefreshCommand}"
                                    Height="34"
                                    Padding="14,6"
                                    Background="#7F1D1D"
                                    Foreground="White"
                                    BorderThickness="0"
                                    HorizontalAlignment="Right"/>
                        </DockPanel>

                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding Tariffs}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  RowHeaderWidth="0"
                                  BorderThickness="0"
                                  Background="White"
                                  Margin="0,12,0,12">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding TariffID}" Width="60"/>
                                <DataGridTextColumn Header="Название" Binding="{Binding TariffName}" Width="2*"/>
                                <DataGridTextColumn Header="По городу" Binding="{Binding CityCallCost, StringFormat={}{0:N2}}" Width="*"/>
                                <DataGridTextColumn Header="Межгород" Binding="{Binding IntercityCallCost, StringFormat={}{0:N2}}" Width="*"/>
                                <DataGridTextColumn Header="Междунар." Binding="{Binding InternationalCallCost, StringFormat={}{0:N2}}" Width="*"/>
                                <DataGridTextColumn Header="SMS" Binding="{Binding SmsCost, StringFormat={}{0:N2}}" Width="*"/>
                                <DataGridTextColumn Header="Стоимость" Binding="{Binding SwitchCost, StringFormat={}{0:N2}}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <Border Background="White"
                        BorderBrush="#E7ECF5"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="16">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Добавить новый тариф"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#0F172A"
                                   Margin="0,0,0,12"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.4*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.6*"/>
                                <ColumnDefinition Width="1.4*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Название" Foreground="#64748B" FontSize="13" Margin="0,0,0,6"/>
                                <TextBox Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="12,8"
                                         Background="#F8FAFC"
                                         BorderBrush="#E2E8F0"
                                         BorderThickness="1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                <TextBlock Text="Стоимость по городу (₽/мин)" Foreground="#64748B" FontSize="13" Margin="0,0,0,6"/>
                                <TextBox Text="{Binding NewCityCost, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="12,8"
                                         Background="#F8FAFC"
                                         BorderBrush="#E2E8F0"
                                         BorderThickness="1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="0,0,12,0">
                                <TextBlock Text="Стоимость Межгород (₽/мин)" Foreground="#64748B" FontSize="13" Margin="0,0,0,6"/>
                                <TextBox Text="{Binding NewIntercityCost, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="12,8"
                                         Background="#F8FAFC"
                                         BorderBrush="#E2E8F0"
                                         BorderThickness="1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Стоимость Междунар. (₽/мин)" Foreground="#64748B" FontSize="13" Margin="0,0,0,6"/>
                                <TextBox Text="{Binding NewInternationalCost, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="12,8"
                                         Background="#F8FAFC"
                                         BorderBrush="#E2E8F0"
                                         BorderThickness="1"/>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="2" Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="2.4*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Стоимость SMS (₽/штука)" Foreground="#64748B" FontSize="13" Margin="0,0,0,6"/>
                                <TextBox Text="{Binding NewSmsCost, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="12,8"
                                         Background="#F8FAFC"
                                         BorderBrush="#E2E8F0"
                                         BorderThickness="1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                <TextBlock Text="Стоимость перехода на тариф и месячный платеж" Foreground="#64748B" FontSize="13" Margin="0,0,0,6"/>
                                <TextBox Text="{Binding NewSwitchCost, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="12,8"
                                         Background="#F8FAFC"
                                         BorderBrush="#E2E8F0"
                                         BorderThickness="1"/>
                            </StackPanel>


                            <Button Grid.Column="3"
                                    Content="Добавить"
                                    Command="{Binding AddCommand}"
                                    Height="36"
                                    Padding="28,8"
                                    Background="#0F172A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    VerticalAlignment="Bottom"/>
                        </Grid>

                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
